global:
    api-listen-addr: :5183
    timeout: 10s
    memo:
    light-cache-size: 20
chains:
    coreum:
        type: cosmos
        value:
            key: coreum-key
            chain-id: {{ .CoreumChanID }}
            rpc-addr: {{ .CoreumRPCURL }}
            account-prefix: {{ .CoreumAccountPrefix }}
            keyring-backend: test
            gas-adjustment: 1.2
            gas-prices: 0.0625udevcore # initial gas price
            min-gas-amount: 0
            debug: true
            timeout: 20s
            output-format: json
            sign-mode: direct
    peer:
        type: cosmos
        value:
            key: peer-key
            chain-id: {{ .PeerChanID }}
            rpc-addr: {{ .PeerRPCURL }}
            account-prefix: {{ .PeerAccountPrefix }}
            keyring-backend: test
            gas-adjustment: 1.2
            gas-prices: 0.01stake
            min-gas-amount: 0
            debug: true
            timeout: 20s
            output-format: json
            sign-mode: direct
paths: {}
